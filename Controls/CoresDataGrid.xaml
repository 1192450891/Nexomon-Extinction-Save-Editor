<DataGrid x:Class="Save_Editor.Controls.CoresDataGrid"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:inventoryEditor="clr-namespace:Save_Editor"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          d:DesignHeight="450"
          d:DesignWidth="800"
          AutoGenerateColumns="False"
          CanUserAddRows="True"
          CanUserDeleteRows="True"
          ColumnWidth="*"
          EnableRowVirtualization="True"
          HeadersVisibility="None"
          mc:Ignorable="d">
    <DataGrid.Columns>
        <DataGridComboBoxColumn DisplayMemberPath="Value"
                                ItemsSource="{x:Static inventoryEditor:Data.ITEM_NAMES_BY_ID}"
                                SelectedValueBinding="{Binding Id, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key"/>
    </DataGrid.Columns>
</DataGrid>